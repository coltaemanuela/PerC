          userAccountList: [
              {
                  userAccountType: "Giving",
                  userAccountNumber: "01234567"
              },
              {
                  userAccountType: "Recipient",
                  userAccountNumber: "7654321"
              }
          ]

      };

      // Fake model for demo only
      var balance = {
          topUpAmount: faker.finance.amount(),
          topUpBoostedAmount: faker.finance.amount(),
          balanceAmount: faker.finance.amount(),
          balanceUnclearedAmount: faker.finance.amount(),
          giftAmount: faker.finance.amount(),
          giftCharityCount: faker.random.number()
      };

      // Fake model for demo only
      var notifications = [];
      for (var i = 0; i<5; i++) {
          notifications.push({
              id: faker.random.number(),
              message: faker.lorem.sentence(),
              date: faker.date.recent()
          });
      }

      // Fake model for demo only
      var favs = [];
      for (var i = 0; i<3; i++) {
          favs.push({
              charityId: faker.random.number(),
              charityName: faker.company.companyName(),
              charityUrl: faker.internet.url(),
              charityNumber: faker.random.number(),
              favourited: true
          });
      }

      // Fake model for demo only
      var charities = [];
      for (var i = 0; i<1000; i++) {
          charities.push({
              charityId: faker.random.number(),
              charityName: faker.company.companyName(),
              charityUrl: faker.internet.url(),
              charityNumber: faker.random.number(),
              favourited: false
          });
      }
    </script>
  {{/content}}
  {{#content "body"}}
    {{> drizzle.nav}}
