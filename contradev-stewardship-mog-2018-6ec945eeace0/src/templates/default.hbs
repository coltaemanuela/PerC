        var Bottom = window.Component.Bottom;
        var Footer = window.Component.Footer;
        var Button = window.Component.Button;
        var ButtonGroup = window.Component.ButtonGroup;
        var TopBar = window.Component.TopBar;
        var Bubbles = window.Component.Bubbles;
        var Modal = window.Component.Modal;
