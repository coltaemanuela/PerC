{{#embed "patterns.organisms.topbar.topbar"}}
{{/embed}}
<main>
    <div class="wrapper">
        {{#embed "patterns.organisms.top"}}
            {{#content "content"}}
                 <h1>Last step... Confirm your monthly top-up</h1>
            {{/content}}
        {{/embed}}
