                <div class="select">
                    <select name="" id="">
                        <option value="">1st of month</option>
                        <option value="">2nd of month</option>
                        <option value="">3rd of month</option>
                        <option value="">4th of month</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="bottom">
            <div class="col-md-4">
                <div class="buttons-group">
                    <button class="btn btn-full">Confirm monthly top-up</button>
                </div>
            </div>
        </div>
    </div>
